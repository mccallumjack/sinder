<div class="container" id="repo-container">
  <div class="card large">

    <div id="repo-header" class="center-align">
      <h3 id="repo-title">Repo Name</h3>
      <h5 id="repo-full-name">Repo Full Name</h5>
      <p id="repo-description">Description</p>
    </div>

    <div id="repo-attributes">
    <div class="container">
      <p>Language: <span id="repo-language"></span></p>
      <p>Stars: <span id="repo-stars"></span></p>
      <p>Forks: <span id="repo-forks"></span></p>
    </div>
    </div>

    <div class="center-align">
      <h4>Open Issues</h4>
      <div id="issue-list"></div>
    </div>

  </div>
</div>

<div id="display-buttons" class="center-align">
  <form method="post" action="/hide" data-remote="true">
    <button type="submit" value="Hide" id="hide" class="waves-effect blue darken-2 btn-large thin btn btn-2">Hide</button>
    <input type="hidden" name="authenticity_token" value="">
  </form>

  <form method="post" action="/star" data-remote="true">
    <button type="submit" value="Like" id="star" class="waves-effect blue darken-2 btn-large thin btn btn-2">Like</button>
    <input type="hidden" name="authenticity_token" value="">
  </form>


</div>
